<div class="container"  ng-controller="HomeController">
  <div class="meetup-location">
    <div class="row">
      <div class="col-md-4"></div>
      <div class="col-md-4">
        <div class="input-group">

          <form class="form-inline" name="locationSearchForm">
            <div class="form-group">
              <input type="text" id="searchTextField" class="form-control" placeholder="Search for..." ng-model="searchInput" required >
              <span ng-show="locationSearchForm.searchInput.$invalid">Please input location</span>
            </div>
        			<button class="btn btn-danger" type="button" ng-click=" locationSearchForm.$valid && locationSearch()">Search</button>
          </form>


        </div>
      </div>
      <div class="col-md-4"></div>
    </div>
  </div>
</div>

<script type="text/javascript">
  function initialize() {
    var input = document.getElementById('searchTextField');
    var options = {componentRestrictions: {country: 'us'}};

    new google.maps.places.Autocomplete(input, options);
  }

  google.maps.event.addDomListener(window, 'load', initialize);
</script>